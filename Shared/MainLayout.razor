@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<style>
    body {
        background-color: #f4f6f6;
    }
    .custom-appbar {
      background-color: white;
      color: black;
    }
</style>

<MudLayout>
    <MudAppBar Elevation="1" Class="custom-appbar">
        <MudImage Src="favicon.webp" Alt="infuraBrowser" Elevation="25" Width="50" Height="50" Class="rounded-lg"/>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="@Color.Dark" Link="https://github.com/sponge1220/InfuraBrowser"/>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-2 pt-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>